<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativelayout_auth"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textview_auth_edittext_title">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/linearlayout_polynavi_auth">
            <TextView
                android:id="@+id/textview_auth_poly"
                android:text="@string/poly"
                android:textAppearance="@style/Poly"
                android:fontFamily="@font/juliussansone_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textview_auth_navi"
                android:text="@string/navi"
                android:textAppearance="@style/Navi"
                android:fontFamily="@font/juliussansone_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/textview_auth_edittext_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginleft_auth_edittexttitle"
        android:layout_above="@+id/autocompletetextview_auth" />
    <AutoCompleteTextView
        android:id="@+id/autocompletetextview_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:completionThreshold="1"
        android:layout_marginLeft="@dimen/marginlr_auth_edittext"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/marginlr_auth_edittext"
        android:inputType="text"
        android:imeOptions="actionGo" />
    <Button
        android:id="@+id/button_auth"
        android:text="@string/button_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autocompletetextview_auth"
        android:layout_marginTop="@dimen/margintopTB_auth_gobutton"
        android:layout_marginLeft="@dimen/marginLR_auth_gobutton"
        android:layout_marginRight="@dimen/marginLR_auth_gobutton"
        android:layout_marginBottom="@dimen/margintopTB_auth_gobutton" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_auth">
            <TextView
                android:id="@+id/textview_auth_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
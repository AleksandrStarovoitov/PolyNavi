<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativelayout_route_row_mainbuilng">
    <ImageView
        android:src="@drawable/ic_gz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview_route_mainbuilding"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="@dimen/margin_route_row_mainbuilding_image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_route"
        android:textAppearance="@style/ScheduleTitleDate"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_route_row_mainbuilding_text"
        android:layout_marginRight="@dimen/margin_route_row_mainbuilding_text"
        android:layout_marginBottom="@dimen/margin_route_row_mainbuilding_text" />
</LinearLayout>
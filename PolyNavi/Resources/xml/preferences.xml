<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory
      android:title="Категория 1">
    <ListPreference
        android:key="startactivity"
        android:title="Стартовый экран"
        android:dialogTitle="Выберите стартовый экран"
        android:entries="@array/pref_activity"
        android:entryValues="@array/pref_activity_values" 
        android:defaultValue="mainbuilding"/>
    <EditTextPreference
        android:key="groupnumber"
        android:title="Номер группы"
        android:summary="Измените номер группы"
        android:dialogTitle="Введите номер группы"/>
    <ListPreference
        android:key="language"
        android:title="Язык приложения"
        android:summary="Для применения изменений необходима перезагрузка приложения"
        android:entries="@array/pref_language"
        android:entryValues="@array/pref_language_values"
        android:defaultValue="default"/>
    
  </PreferenceCategory>
  
  
  
</PreferenceScreen>
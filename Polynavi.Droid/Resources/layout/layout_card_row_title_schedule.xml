<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/relativelayout_row_title_schedule"
    android:background="@color/color_title_schedule_background"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:id="@+id/linear123"
        android:background="@color/color_title_schedule_background"
        android:orientation="vertical">
        <TextView
            android:text="Янв"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_card_dayofweek_row_title_schedule12"
            android:textAppearance="@style/ScheduleTitleDayOfWeek"
            android:fontFamily="@font/roboto_light" />
         <TextView
            android:text="22"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_card_dayofweek_row_title_schedule123"
            android:textAppearance="@style/ScheduleTitleDayOfWeek"
            android:fontFamily="@font/roboto_light" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#000000"/>
    </LinearLayout>
</LinearLayout>

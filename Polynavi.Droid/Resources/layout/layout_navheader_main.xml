<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:id="@+id/linearlayout_header_main"
    android:layout_marginTop="20dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/textview_header_poly"
        android:text="@string/poly"
        android:textAppearance="@style/Poly"
        android:fontFamily="@font/juliussansone_regular"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/textview_header_navi"
        android:text="@string/navi"
        android:textAppearance="@style/Navi"
        android:fontFamily="@font/juliussansone_regular"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>
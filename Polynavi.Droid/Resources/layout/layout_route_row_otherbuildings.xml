<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout_route_row_otherbuildings">
    <ImageView
        android:src="@drawable/ic_place_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview_route_otherbuildings"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="@dimen/margin_route_row_otherbuildings_image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_route"        
        android:textAppearance="@style/TitleLight"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_route_row_otherbuildings_text"
        android:layout_marginRight="@dimen/margin_route_row_otherbuildings_text"
        android:layout_marginBottom="@dimen/margin_route_row_otherbuildings_text" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8" ?>

<resources>
    <style name="MyTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>

      <item name="preferenceTheme">
        @style/PreferenceThemeOverlay.v14.Material
      </item>
      <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <style name="AppAlertDialog"
          parent="Theme.AppCompat.DayNight.Dialog.Alert">
      <item name="colorAccent">@color/color_accent</item>
    </style>
  
    <style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
 
    <style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
  
    <style name="MyAppTheme" parent="MyTheme.Base">

    </style>

    <style name="MyAppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

  <style name="AppAlertDialogContent"
      parent="Theme.AppCompat.DayNight">
    <item name="colorAccent">@color/color_accent</item>
  </style>

  <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/color_toolbar_text</item>
  </style>
  <style name ="ToolbarTheme" parent="@style/Widget.AppCompat.Toolbar">
      <item name="titleTextColor">@color/color_toolbar_text</item>
      <item name="subtitleTextColor">@color/color_toolbar_text</item>
  </style>

  <style name="Poly" parent="TextAppearance.AppCompat">
      <item name="android:textSize">30sp</item>
      <item name="android:textColor">@color/color_black</item>
  </style>
  <style name="Navi" parent="TextAppearance.AppCompat">
      <item name="android:textSize">30sp</item>
      <item name="android:textColor">@color/color_black_with_transparency</item>
  </style>
  <style name="ShapeAppearanceOverlay.Nav" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">8dp</item>
  </style>

  <style name="ScheduleEndTime" parent="TextAppearance.AppCompat">
      <item name="android:textSize">16sp</item>
      <item name="android:textColor">@color/color_black_with_transparency</item>
  </style>
  <style name="ScheduleStartTime" parent="TextAppearance.AppCompat">
      <item name="android:textSize">16sp</item>
      <item name="android:textColor">@color/color_black</item>
  </style>
  <style name="ScheduleSubject" parent="TextAppearance.AppCompat">
      <item name="android:textSize">16sp</item>
      <item name="android:textColor">@color/color_black</item>
  </style>
  <style name="ScheduleBuilding" parent="TextAppearance.AppCompat">
      <item name="android:textSize">15sp</item>
      <item name="android:textColor">@color/color_black_with_transparency</item>
  </style>
  <style name="ScheduleRoom" parent="TextAppearance.AppCompat">
      <item name="android:textSize">15sp</item>
      <item name="android:textColor">@color/color_black_with_transparency</item>
  </style>
  <style name="ScheduleTitleDate" parent="TextAppearance.AppCompat">
      <item name="android:textSize">21sp</item>
      <item name="android:textColor">@color/color_title_schedule_text</item>
  </style>
  <style name="ScheduleTitleDayOfWeek" parent="TextAppearance.AppCompat">
      <item name="android:textSize">27sp</item>
      <item name="android:textColor">@color/color_title_schedule_text_dayofweek</item>
  </style>

  <style name="NoConnectionTitle" parent="TextAppearance.AppCompat">
    <item name="android:textSize">32sp</item>
    <item name="android:textColor">@color/color_black</item>
  </style>
  
</resources>